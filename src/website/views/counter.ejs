<!DOCTYPE html>

<html>

<head>
  <title>Yiff Today - Query Counter</title>

  <%- include("./partials/head"); %>
</head>

<body>

  <div class="columns">
    <div class="is-container box column is-10 is-offset-1 my-6 has-text-centered options">
      <h1 class="is-size-1 has-text-light">
        Count: <span id="count">0</span>
      </h1>
    </div>
  </div>

  <div class="columns">
    <div class="is-container box column is-10 is-offset-1 my-6 has-text-centered options">
      <sub style="color:#4a4a4a;">This site uses the <a href="https://e621.net/forum_topics/40732" target="_blank" style="color:#aaa;">advanced search syntax</a>!</sub><br>
      <input class="input-text" id="search-text" type="text" placeholder="Search tags" style="height:2.5em;" /><br />
      <button class="blue-button" id="count-button">Count</button><br />
    </div>
  </div>

  <%- include("./partials/index"); %>

  <script src="/js/counter/handler.js"></script>

  <script>
    let params = new URL(document.location).searchParams
    let query = params.get("q")

    if (query && query.length > 0) {
      document.getElementById("search-text").value = decodeURI(query)
      document.getElementById("count-button").click()
    }
  </script>
</body>

</html>